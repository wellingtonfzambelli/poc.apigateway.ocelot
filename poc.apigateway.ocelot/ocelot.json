{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000" // Base URL Api Gateway
  },
  "Routes": [
    
    // CLIENTS
    {
      "UpstreamPathTemplate": "/gateway/clients/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],

      "DownstreamPathTemplate": "/api/clients/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5138
        }
      ],

      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "10s",
        "Limit": 1
      }
    }
  ]
}